{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": false,
    "rootDirs": ["lib"],
    "importHelpers": false,
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules"]
}
